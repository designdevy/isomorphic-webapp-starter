    "url": "https://github.com/vikpe/dotbot/issues"
  },
  "homepage": "https://github.com/vikpe/dotbot#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "express": "^4.16.1",
    "file-loader": "^1.1.4",
    "image-webpack-loader": "^3.4.2",
    "jshint": "^2.9.5",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
