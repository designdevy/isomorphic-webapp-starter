{
  "name": "dotbot",
  "version": "0.1.0",
  "description": "Minimal starter kit with hot module replacement (HMR) for rapid development.",
  "scripts": {
    "start": "npm run start-dev",
    "build": "concurrently \"npm run build-client\" \"npm run build-server\"",
    "build-client": "webpack -p --env=client.prod",
    "build-server": "webpack -p --env=server.prod",
    "start-dev": "webpack-dev-server --env=app.dev",
    "start-prod": "npm run build && npm run start-server-prod",
    "start-server-dev": "node src/server/express.js",
    "start-server-prod": "node dist/server.min.js",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "eslint src/**/*.js*",
    "lint:sass": "stylelint ./src/client/**/*.scss"
  },
  "author": "Viktor Persson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikpe/dotbot.git"
  },
  "bugs": {
    "url": "https://github.com/vikpe/dotbot/issues"
  },
  "homepage": "https://github.com/vikpe/dotbot#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.8.0",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.16.1",
    "file-loader": "^1.1.4",
    "image-webpack-loader": "^3.4.2",
    "jshint": "^2.9.5",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
